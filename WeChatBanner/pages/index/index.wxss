/**index.wxss**/

.bannerSwiper {
    height:300rpx;
    width: 100vw;
    position: absolute;
    left: 0rpx;
    top: 10rpx;
}
.imageBanner {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    position: relative;
    padding: 0;
    line-height: 100%;
    background: transparent;
    text-align: left;
}

.imageBanner_small {
    transform: scale(0.9);
    transition: 0.2s, ease-in 0s;
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    z-index: 100;
    padding: 0;
    line-height: 100%;
    background: transparent;
    text-align: left;
    opacity: 0.5;
}

